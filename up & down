import random

com_ran_num = random.randint(1,100)
count = 0
check = 0

while count != 5:

    user_num = int(input('1이상 100이하 정수를 입력해주세요: '))

    if com_ran_num > user_num:
        print("UP. 컴퓨터의 숫자가 더 큽니다")
        count += 1
        check += 0

    elif com_ran_num == user_num:
        break
    else:
        print("Donw. 컴퓨터의 숫자가 더 작습니다")
        count += 1
        check += 0

if count < 5:
    print("정답입니다. {}번 만에 맞추셨습니다.".format(count))

else:
    print("5번 틀렸습니다. 게임종료")
